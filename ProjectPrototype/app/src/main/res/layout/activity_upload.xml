<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">


    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectPhoto"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:gravity="center"
            android:text="Select a Photo"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/choosePhotoMessage"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/selectPhoto"
            android:layout_marginTop="26dp"
            android:text="Choose a photo from your device"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="normal">

        </TextView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_below="@+id/choosePhotoMessage"
            android:layout_marginTop="50dp"
            android:src="@drawable/add_photo_icon">

        </ImageView>


    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="800dp"
        android:background="@color/white"
        app:labelVisibilityMode="labeled"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>