<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UploadActivity">

    <!-- Main Layout Container -->



    <!-- Title Text -->

    <!-- Image Preview -->


    <TextView
        android:id="@+id/selectPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Upload Images"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="107dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="72dp"
        android:scaleType="centerCrop"
        android:src="@drawable/upload"
        app:layout_constraintEnd_toEndOf="@+id/selectPhoto"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/selectPhoto"
        app:layout_constraintTop_toBottomOf="@+id/selectPhoto" />

    <ImageView
        android:id="@+id/captured_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <!-- Upload from Gallery Button -->
    <Button
        android:id="@+id/upload_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/orange"
        android:padding="12dp"
        android:textStyle="bold"
        android:text="Upload from Gallery"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/captured_image_view"
        app:layout_constraintStart_toStartOf="@+id/captured_image_view"
        app:layout_constraintTop_toBottomOf="@+id/captured_image_view" />
    <!-- Upload from Camera Button -->
    <Button
        android:id="@+id/upload_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/orange"
        android:padding="12dp"
        android:text="Upload from Camera"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/upload_gallery"
        app:layout_constraintStart_toStartOf="@+id/upload_gallery"
        app:layout_constraintTop_toBottomOf="@+id/upload_gallery" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="170dp"
        android:background="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintEnd_toEndOf="@+id/upload_camera"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/upload_camera"
        app:layout_constraintTop_toBottomOf="@+id/upload_camera"
        app:menu="@menu/bottom_nav_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>